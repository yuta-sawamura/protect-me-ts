<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body class="bg-gray-100">
    <%- include('./partials/header'); %>
    <main class="flex items-center justify-center h-screen px-4 py-16">
      <div
        class="divide-y divide-gray-200 bg-white shadow-md rounded-md p-4 w-full max-w-md"
      >
        <% if (messages && messages.length > 0) { %>
        <div
          id="flash-message"
          class="bg-blue-500 text-white px-4 py-2 rounded"
        >
          <%= messages[0] %>
        </div>
        <script>
          setTimeout(function () {
            const element = document.getElementById("flash-message");
            if (element) {
              element.style.display = "none";
            }
          }, 5000);
        </script>
        <% } %>
        <h2 class="text-xl font-semibold mb-2">Login</h2>
        <form action="/login" method="POST">
          <div class="mb-4">
            <label for="email" class="block text-lg font-medium text-gray-700"
              >Email</label
            >
            <input
              type="email"
              name="email"
              id="email"
              class="border-2 border-gray-300 rounded-md w-full p-2"
              required
            />
          </div>
          <div class="mb-4">
            <label
              for="password"
              class="block text-lg font-medium text-gray-700"
              >Password</label
            >
            <input
              type="password"
              name="password"
              minlength="8"
              id="password"
              class="border-2 border-gray-300 rounded-md w-full p-2"
              required
            />
          </div>
          <div class="text-right">
            <button
              type="submit"
              class="bg-blue-600 text-white rounded-md px-4 py-2"
            >
              Login
            </button>
          </div>
        </form>
        <div class="mt-4 text-center">
          <p class="text-gray-700">
            Don't have an account?
            <a href="/signup" class="text-blue-600 hover:underline">Sign Up</a>
          </p>
        </div>
      </div>
    </main>
  </body>
</html>
